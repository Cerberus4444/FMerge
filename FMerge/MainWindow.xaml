<Window x:Class="FMerge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FMerge"
        mc:Ignorable="d"
        Title="FMerge" Height="300" Width="500" MinWidth="450" MinHeight="250" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label" Content="Main folder path:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_MainFolderPath" Height="23" Margin="115,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btn_Merge" Content="Merge contents" Margin="10,0,10.667,9.333" Click="button_Click" Height="46" VerticalAlignment="Bottom"/>
        <GroupBox x:Name="groupBox" Header="Filter file types" HorizontalAlignment="Left" Margin="10,41,0,67.333" Width="476">
            <CheckBox x:Name="chk_FileType_mkv" Content=".mkv" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        </GroupBox>

    </Grid>
</Window>
